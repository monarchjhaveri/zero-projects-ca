<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>
        <%= current_page.data.title || data.site.title %>
    </title>

    <%= stylesheet_link_tag "site" %>
    <%= stylesheet_link_tag "plugins" %>
    <%= stylesheet_link_tag "styles" %>

    <%= javascript_include_tag "site" %>
</head>

<body>
    <!-- start page loading -->
    <div id="preloader">
        <div class="row loader">
            <div class="loader-icon"></div>
        </div>
    </div>
    <!-- end page loading -->

    <!-- start main-wrapper section -->
    <div class="main-wrapper">

        <!-- start header section -->
        <% if current_page.url == '/' %>
        <header class="position-absolute width-100 sm-position-relative">
        <% else %>
        <header>
        <% end %>
            <div class="navbar-default">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-12 col-lg-12">
                            <div class="menu_area alt-font">
                                <nav class="navbar navbar-expand-lg navbar-light no-padding">

                                    <div class="navbar-header navbar-header-custom">
                                        <!-- start logo -->
                                        <a href="javascript:void(0)" class="navbar-brand">
                                            <img id="logo" src="/images/logos/zero-logo-purple-2.png" alt="logo">
                                        </a>
                                        <!-- end logo -->
                                    </div>

                                    <div class="navbar-toggler"></div>

                                    <!-- start menu Area -->
                                    <ul class="navbar-nav ml-auto" id="nav">
                                        <li><a href="/services.html">Services</a>
                                            <ul>
                                                <% data.services.list[0..3].each do |service| %>
                                                <li><a href="/services.html"><%= service.name %></a></li>
                                                <% end %>
                                            </ul>
                                        </li>

                                        <li><a href="/work.html">Case Studies</a>
                                            <ul>
                                                <% blog('work').articles[0..3].each do |article| %>
                                                <li><%= link_to article.title, article %></li>
                                                <% end %>
                                            </ul>
                                        </li>

                                        <li><a href="/insights.html">Insights</a>
                                            <ul>
                                                <% blog('insights').articles[0...3].each do |article| %>
                                                <li><%= link_to article.title, article %></li>
                                                <% end %>
                                            </ul>
                                        </li>
                                    </ul>
                                    <!-- end menu Area -->

                                    <div class="margin-20px-left sm-display-none">
                                        <a class="butn" href="#contactUs">Get In Touch</a>
                                    </div>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- end header section -->

        <%= yield %>

        <!-- start contact form -->
        <section id="contactUs" data-scroll-index="6" class="bg-light-gray">
            <div class="container">
                <div class="row">
                    <div class="col-12 wow fadeIn">

                        <div class="section-heading">
                            <h3>Hi. How can we make your day better?</h3>
                        </div>

                        <form method="post" action="bat/rd-mailform.php" class="mailform off2">
                            <input type="hidden" name="form-type" value="contact">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" name="name" placeholder="Your Name:" data-constraints="@LettersOnly @NotEmpty">
                                </div>
                                <div class="col-md-6">
                                    <input type="text" name="email" placeholder="Email:" data-constraints="@Email @NotEmpty">
                                </div>
                                <div class="col-md-12">
                                    <textarea name="message" rows="5" placeholder="Message:" data-constraints="@NotEmpty"></textarea>
                                </div>
                                <div class="mfControls col-md-12">
                                    <button type="submit" class="butn">Send</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </section>
        <!-- end contact form -->

        <!-- start footer section -->
        <footer>
            <div class="container">
                <div class="row">

                    <div class="col-lg-4 col-md-6 sm-margin-30px-bottom">

                        <img alt="footer-logo" width="150" src="/images/logos/zero-logo-white-2.png">
                        <p class="margin-20px-top"><%= data.site.footer.description %></p>
                        <% if data.social.accounts %>
                        <div class="margin-25px-top xs-margin-20px-top footer-social-icons">
                            <ul>
                                <% data.social.accounts.each do |account| %>
                                <li><a href="<%= account.url %>" target="_blank"><i class="fab <%= account.icon %>"></i></a></li>
                                <% end %>
                            </ul>
                        </div>
                        <% end %>

                    </div>

                    <div class="col-lg-4 col-md-6 sm-margin-30px-bottom">
                        <h3 class="footer-title-style2"><%= data.site.footer.quickLinks %></h3>
                        <div class="row">
                            <div class="col-md-6 no-padding-right xs-padding-15px-right">
                                <ul class="footer-list xs-margin-5px-bottom">

                                    <li><a href="about.html">Home</a></li>
                                    <li><a href="services.html">Services</a></li>
                                    <li><a href="contact.html">Contact us</a></li>
                                </ul>
                            </div>
                            <div class="col-md-6 no-padding-right xs-padding-15px-right">
                                <ul class="footer-list">
                                    <li><a href="casestudies.html">Case Studies</a></li>
                                    <li><a href="insights.html">Insights</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 offset-lg-1">
                        <h3 class="footer-title-style2"><%= data.site.footer.getInTouch %></h3>
                        <ul class="footer-list">
                            <% if data.contact.phoneNumber? %>
                            <li>
                                <span class="d-inline-block vertical-align-top font-size18"><i class="fas fa-mobile-alt"></i></span>
                                <span class="d-inline-block width-85 vertical-align-top padding-10px-left"><%= data.contact.phoneNumber %></span>
                            </li>
                            <% end %>
                            <% if data.contact.emailAddress %>
                            <li>
                                <span class="d-inline-block vertical-align-top font-size18"><i class="far fa-envelope"></i></span>
                                <span class="d-inline-block width-85 vertical-align-top padding-10px-left"><%= data.contact.emailAddress %></span>
                            </li>
                            <% end %>
                        </ul>
                    </div>

                </div>

            </div>
            <div class="footer-bar xs-font-size13">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 text-left xs-text-center xs-margin-5px-bottom">
                            <p>&copy;
                                <%= Time.now.year %> Zero Projects, Inc. All Rights Reserved.</p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- end footer section -->

        <!-- start scroll to top -->
        <a href="javascript:void(0)" class="scroll-to-top"><i class="fas fa-angle-up" aria-hidden="true"></i></a>
        <!-- end scroll to top -->

        <!-- all js include start -->

        <!-- jQuery -->
        <%= javascript_include_tag "jquery.min" %>

        <!-- modernizr js -->
        <%= javascript_include_tag "modernizr" %>

        <!-- bootstrap -->
        <%= javascript_include_tag "bootstrap.min" %>

        <!-- scrollIt -->
        <%= javascript_include_tag "scrollIt.min" %>

        <!-- navigation -->
        <%= javascript_include_tag "nav-menu" %>

        <!-- tab -->
        <%= javascript_include_tag "easy.responsive.tabs" %>

        <!-- owl carousel -->
        <%= javascript_include_tag "owl.carousel" %>

        <!-- jquery.counterup.min -->
        <%= javascript_include_tag "jquery.counterup.min" %>

        <!-- stellar js -->
        <%= javascript_include_tag "jquery.stellar.min" %>

        <!-- waypoints js -->
        <%= javascript_include_tag "waypoints.min" %>

        <!-- tab js -->
        <%= javascript_include_tag "tabs.min" %>

        <!-- countdown js -->
        <%= javascript_include_tag "countdown" %>

        <!-- jquery.magnific-popup js -->
        <%= javascript_include_tag "jquery.magnific-popup.min" %>

        <!-- isotope.pkgd.min js -->
        <%= javascript_include_tag "isotope.pkgd.min" %>

        <!-- wow js -->
        <%= javascript_include_tag "wow" %>

        <!-- map js -->
        <%= javascript_include_tag "map" %>

        <!-- custom scripts -->
        <%= javascript_include_tag "main" %>

        <!-- contact form scripts -->
        <%= javascript_include_tag "mailform/jquery.form.min" %>
        <%= javascript_include_tag "mailform/jquery.rd-mailform.min.c" %>

        <!-- all js include end -->
</body>

</html>