<!-- start header section -->
<% if current_page.url == '/' %>
<header class="position-absolute width-100 sm-position-relative">
<% else %>
<header>
<% end %>
    <div class="navbar-default">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-lg-12">
                    <div class="menu_area alt-font">
                        <nav class="navbar navbar-expand-lg navbar-light no-padding">

                            <div class="navbar-header navbar-header-custom">
                                <!-- start logo -->
                                <a href="/" class="navbar-brand">
                                    <img id="logo" src="/images/logos/zero-logo-purple-2.png" alt="zero">
                                </a>
                                <!-- end logo -->
                            </div>

                            <div class="navbar-toggler"></div>

                            <!-- start menu Area -->
                            <ul class="navbar-nav ml-auto" id="nav">
                                <li><a href="/services">Services</a></li>

                                <li><a href="/work">Case Studies</a>
                                    <ul>
                                        <% blog('work').articles[0..3].each do |article| %>
                                        <li>
                                            <%= link_to article.title, article %>
                                        </li>
                                        <% end %>
                                    </ul>
                                </li>

                                <li><a href="/insights">Insights</a>
                                    <ul>
                                        <% blog('insights').articles[0...3].each do |article| %>
                                        <li>
                                            <%= link_to article.title, article %>
                                        </li>
                                        <% end %>
                                    </ul>
                                </li>
                            </ul>
                            <!-- end menu Area -->

                            <div class="margin-20px-left sm-display-none">
                                <a class="butn scroll-to-contact" href="javascript:void(0)">Get In Touch</a>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- end header section -->