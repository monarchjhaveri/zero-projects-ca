<!-- start header section -->
<% if current_page.url == '/' %>
<header class="position-absolute width-100 sm-position-relative">
<% else %>
<header>
<% end %>
    <div class="navbar-default">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-lg-12">
                    <div class="menu_area alt-font">
                        <nav class="navbar navbar-expand-lg navbar-light no-padding">

                            <div class="navbar-header navbar-header-custom">
                                <!-- start logo -->
                                <a href="/" class="navbar-brand">
                                    <img id="logo" src="/images/logos/zero-logo-purple-raleway.png" alt="zero">
                                </a>
                                <!-- end logo -->
                            </div>

                            <div class="navbar-toggler"></div>

                            <!-- start menu Area -->
                            <ul class="navbar-nav ml-auto" id="nav">
                                <li class="services_nav_link"><a href="/services">Services</a></li>

                                <li class="work_nav_link"><a href="/work">Case Studies</a></li>

                                <li class="insights_nav_link"><a href="/insights">Insights</a>
                                    <% if blog('insights').articles %>
                                    <ul>
                                        <li>
                                            <span class="new-tag">new</span> <%= link_to blog('insights').articles[0].title, blog('insights').articles[0] %>
                                        </li>
                                        <% blog('insights').articles[1...2].each do |article| %>
                                        <li>
                                            <%= link_to article.title, article %>
                                        </li>
                                        <% end %>
                                    </ul>
                                    <% end %>
                                </li>
                            </ul>
                            <!-- end menu Area -->

                            <div class="margin-20px-left sm-display-none">
                                <a class="butn scroll-to-contact" href="javascript:void(0)">Get In Touch</a>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- end header section -->