---
pageable: true
per_page: 5
blog: work
---

<!-- start blog list section -->
<section>
  <div class="container">
    <div class="row justify-content-md-center">

      <!--  start blog center-->
      <div class="col-lg-9 col-md-12">

        <% page_articles.each_with_index do |article, i| %>
        <div class=blog-list-simple>
          <div class="row">
            <div class="col-md-12">
              <div class="blog-list-simple-text">
                <h4>
                  <%= article.title %>
                </h4>
                <%= article.summary(250) %>
                <div class="text-left margin-10px-top">
                  <%= link_to '<span>Read More</span>'.html_safe, article, :class => 'butn small' %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>

        <!-- start pager  -->
        <% if paginate && num_pages > 1 %>
        <div class="no-margin">
          <div class="pagination text-small text-uppercase text-extra-dark-gray">
            <ul class="no-margin">
              <% if prev_page %>
              <li><a href="<%= prev_page %>"><i class="fas fa-long-arrow-alt-left margin-5px-right xs-display-none"></i>Prev</a></li>
              <% end %>
              <% if next_page %>
              <li><a href="<%= next_page %>">Next <i class="fas fa-long-arrow-alt-right margin-5px-left xs-display-none"></i></a></li>
              <% end %>
            </ul>
          </div>
        </div>
        <% end %>
        <!-- end pager -->

      </div>
      <!--  end blog center-->

    </div>

  </div>
</section>
<!-- end blog list section -->